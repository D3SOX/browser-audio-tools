---
const {
  title = 'Browser Audio Tools',
  description = 'Client-side audio utilities: convert, retag, trim, visualize, and more directly in your browser.',
} = Astro.props;
const ogImage =
  "data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 1200 630'%3E%3Cdefs%3E%3ClinearGradient id='bg' x1='0%25' y1='0%25' x2='100%25' y2='100%25'%3E%3Cstop offset='0%25' stop-color='%230a0a0f'/%3E%3Cstop offset='100%25' stop-color='%2312121a'/%3E%3C/linearGradient%3E%3ClinearGradient id='accent' x1='0%25' y1='0%25' x2='100%25' y2='0%25'%3E%3Cstop offset='0%25' stop-color='%23f59e0b'/%3E%3Cstop offset='100%25' stop-color='%238b5cf6'/%3E%3C/linearGradient%3E%3C/defs%3E%3Crect width='1200' height='630' fill='url(%23bg)'/%3E%3Ccircle cx='220' cy='200' r='170' fill='%23f59e0b' opacity='0.12'/%3E%3Ccircle cx='1000' cy='430' r='230' fill='%238b5cf6' opacity='0.08'/%3E%3Ctext x='600' y='280' font-family='Inter,system-ui,sans-serif' font-size='66' font-weight='700' fill='%23e4e4e7' text-anchor='middle'%3EBrowser Audio Tools%3C/text%3E%3Ctext x='600' y='360' font-family='Inter,system-ui,sans-serif' font-size='30' fill='%23cbd5e1' text-anchor='middle'%3EClient-side noise, cover, and WAV-%26gt%3BMP3%3C/text%3E%3Ctext x='600' y='440' font-family='Inter,system-ui,sans-serif' font-size='30' fill='url(%23accent)' text-anchor='middle'%3EPowered by ffmpeg.wasm%3C/text%3E%3Ctext x='600' y='520' font-family='Inter,system-ui,sans-serif' font-size='54' text-anchor='middle'%3E%F0%9F%8E%A7%3C/text%3E%3C/svg%3E";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0a0a0f" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="Audio Tools" />
    <link rel="manifest" href="/manifest.webmanifest" />
    <link rel="apple-touch-icon" href="/icons/icon-192.svg" />
    <link
      rel="icon"
      href="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'%3E%3Crect width='100' height='100' rx='20' fill='%230a0a0f'/%3E%3Ctext x='50' y='68' font-size='55' text-anchor='middle'%3E%F0%9F%8E%A7%3C/text%3E%3C/svg%3E"
    />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Browser Audio Tools" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/svg+xml" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <script is:inline>
      (() => {
        const doc = document.documentElement;
        const storedTheme = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const theme = storedTheme ?? 'system';
        const resolvedTheme =
          theme === 'system' ? (prefersDark ? 'dark' : 'light') : theme;
        doc.setAttribute('data-theme', resolvedTheme);
        // Share with React hooks to avoid re-render mismatch
        window.__INITIAL_THEME__ = theme;

        const storedConsent = localStorage.getItem('analytics-consent');
        if (storedConsent === 'true') {
          window.__INITIAL_CONSENT__ = true;
        } else if (storedConsent === 'false') {
          window.__INITIAL_CONSENT__ = false;
        }
      })();
    </script>
    <meta name="color-scheme" content="light dark" />
    <slot name="head" />
  </head>
  <body>
    <slot />
    <script is:inline>
      // Register service worker for PWA offline support
      // Note: ffmpeg preloading is handled by usePWAStatus hook in React
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js')
            .then((registration) => {
              console.info('[PWA] Service worker registered:', registration.scope);
              registration.addEventListener('updatefound', () => {
                const newWorker = registration.installing;
                if (newWorker) {
                  newWorker.addEventListener('statechange', () => {
                    if (newWorker.state === 'installed' && navigator.serviceWorker.controller) {
                      console.info('[PWA] New version available');
                    }
                  });
                }
              });
            })
            .catch((err) => {
              console.warn('[PWA] Service worker registration failed:', err);
            });
        });
      }
    </script>
  </body>
</html>

