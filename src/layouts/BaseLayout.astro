---
const {
  title = 'Browser Audio Tools',
  description = 'Client-side audio utilities: convert, retag, trim, visualize, and more directly in your browser.',
} = Astro.props;
const ogImage =
  "data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 1200 630'%3E%3Cdefs%3E%3ClinearGradient id='bg' x1='0%25' y1='0%25' x2='100%25' y2='100%25'%3E%3Cstop offset='0%25' stop-color='%230a0a0b'/%3E%3Cstop offset='100%25' stop-color='%23121214'/%3E%3C/linearGradient%3E%3ClinearGradient id='accent' x1='0%25' y1='0%25' x2='100%25' y2='0%25'%3E%3Cstop offset='0%25' stop-color='%23e67e22'/%3E%3Cstop offset='100%25' stop-color='%23f39c12'/%3E%3C/linearGradient%3E%3C/defs%3E%3Crect width='1200' height='630' fill='url(%23bg)'/%3E%3Ccircle cx='200' cy='180' r='200' fill='%23e67e22' opacity='0.06'/%3E%3Ccircle cx='1000' cy='450' r='280' fill='%23e67e22' opacity='0.04'/%3E%3Ctext x='600' y='260' font-family='Georgia,serif' font-size='72' font-weight='700' fill='%23f5f5f0' text-anchor='middle'%3EBrowser Audio Tools%3C/text%3E%3Crect x='520' y='290' width='160' height='4' fill='url(%23accent)'/%3E%3Ctext x='600' y='370' font-family='monospace' font-size='26' fill='%23a8a8a0' text-anchor='middle'%3EConvert, retag, trim, visualize%3C/text%3E%3Ctext x='600' y='440' font-family='monospace' font-size='24' fill='url(%23accent)' text-anchor='middle'%3EPowered by ffmpeg.wasm%3C/text%3E%3Ctext x='600' y='530' font-family='system-ui,sans-serif' font-size='54' text-anchor='middle'%3E%F0%9F%8E%A7%3C/text%3E%3C/svg%3E";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0a0a0b" />
    <link
      rel="icon"
      href="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'%3E%3Cdefs%3E%3ClinearGradient id='g' x1='0%25' y1='0%25' x2='100%25' y2='100%25'%3E%3Cstop offset='0%25' stop-color='%23e67e22'/%3E%3Cstop offset='100%25' stop-color='%23f39c12'/%3E%3C/linearGradient%3E%3C/defs%3E%3Crect width='100' height='100' rx='18' fill='%230a0a0b'/%3E%3Crect x='8' y='8' width='84' height='84' rx='12' fill='none' stroke='url(%23g)' stroke-width='2' opacity='0.4'/%3E%3Ctext x='50' y='66' font-size='48' text-anchor='middle'%3E%F0%9F%8E%A7%3C/text%3E%3C/svg%3E"
    />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Browser Audio Tools" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/svg+xml" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <script is:inline>
      (() => {
        const doc = document.documentElement;
        const storedTheme = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const theme = storedTheme ?? 'system';
        const resolvedTheme =
          theme === 'system' ? (prefersDark ? 'dark' : 'light') : theme;
        doc.setAttribute('data-theme', resolvedTheme);
        // Share with React hooks to avoid re-render mismatch
        window.__INITIAL_THEME__ = theme;

        const storedConsent = localStorage.getItem('analytics-consent');
        if (storedConsent === 'true') {
          window.__INITIAL_CONSENT__ = true;
        } else if (storedConsent === 'false') {
          window.__INITIAL_CONSENT__ = false;
        }
      })();
    </script>
    <meta name="color-scheme" content="light dark" />
    <link rel="preconnect" href="https://fonts.bunny.net" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.bunny.net/css?family=manrope:400,500,600,700,800|ibm-plex-mono:400,500,600,700"
    />
    <slot name="head" />
  </head>
  <body>
    <slot />
  </body>
</html>

